{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",

    "rootDir": ".",
    "outDir": "dist",

    "strict": false,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],

    "resolveJsonModule": true
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"]
}
